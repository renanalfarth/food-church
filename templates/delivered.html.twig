{% extends "layout.html.twig" %}

{% block content %}

<div class="row">
  <br />

  <h4>Pedidos Entregues</h4>

  <br />

  {% for order in orders %}

    <div class="col-sm-4 col-md-3">
      <div class="thumbnail">
        <div class="caption">
          <h2>Senha {{ order.id }}</h2>
          <p class="order-desc">{{ order.descricao|raw }}</p>
          {% if order.observacao != '' %}
            <p><b>Obs:</b> {{ order.observacao }}</p>
          {% endif %}
        </div>
      </div>

    </div>

  {% endfor %}

</div>

{% endblock %}

{% block scripts %}

  <script type="text/javascript">
    window.url_check = "{{ url('check') }}";
  </script>

  <script type="text/javascript" src="{{ asset('js/orders.js') }}"></script>

{% endblock %}
